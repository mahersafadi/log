		<tab id='tab2' title='daily_payment' image='images/customer80x80.png'>
			<table id='daily_payment_table'
				db_table='daily_payment'
				allow_insert='true' 
				allow_delete='true'
				allow_update='true'
				order-by ="date"
				width='800'
				height='300'
				savemethod='dailypayment._save'
				newmethod= 'dailypayment._new'
				deletemethod='dailypayment._delete'
				new='dailypayment._new'
				math-expression='(c9=((c7=((c3+c5)*c4))-c8))'
				>
				<column id='dpidcol' title='row_id'  pk='true'>
					<text type='text' id='id' readonly='true' />													<!-- 0 -->
				</column>
				<column id='daily_payment_itmcol' title='item' search='true' search-cond='like' align='center'>
					<select id='item' source='db' dbtable='items' value='id' label='name' onchanged='affect' >		<!-- 1 -->
						<affects>
							<affect type='col' id='totalquantity' source='db' dbtable='items' field='quantity' 			where='id=#{new_val}' ></affect>
							<affect type='col' id='payment_price' source='db' dbtable='items' field='payment_price' 	where='id=#{new_val}' ></affect>
						</affects>
					</select>
				</column>
				<column id='daily_payment_quantitycol' title='total_quantity'>
					<text type='text' id='totalquantity' readonly='true' />											<!-- 2 -->
				</column>
				<column id='daily_payment_quantitycol' title='quantity' search='true' search-cond='='>
					<text type='text' id='quantity'  onchanged='math_exp'/>											<!-- 2 -->
				</column>
				<column id='daily_payment_payment_pricecol' title='payment_price' >
					<text type='text' id='payment_price' onchanged='math_exp'  />									<!-- 3 -->
				</column>				
				<column id='daily_payment_fromout_qunatitycol' title='fromout_qunatity'>
					<text type='text' id='fromout_qunatity'  onchanged='math_exp'/>									<!-- 4 -->
				</column>
				<column id='daily_payment_fromout_pricecol' title='fromout_price'>
					<text type='text' id='fromout_price' />															<!-- 5 -->
				</column>
				<column id='daily_payment_fromout_totalcol' title='total' >
					<text type='text' id='total' readonly='true'  />												<!-- 6 -->
				</column>
				<column id='daily_payment_discountecol' title='discount'>
					<text type='text' id='discount'  onchanged='math_exp'/>											<!-- 7 -->
				</column>
				<column id='daily_payment_netcol' title='net'>
					<text type='text' id='net' readonly='true' onchanged='math_exp'/>								<!-- 8 -->
				</column>
				<column id='dpqcol' title='date' search='true' search-cond='>='>
					<date type='text' id='date' default='today' />													<!-- 9 -->
				</column>
			</table>
		</tab>
